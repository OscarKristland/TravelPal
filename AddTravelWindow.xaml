<Window x:Class="TravelPal.AddTravelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="AddTravelWindow" Height="450" Width="800">
    <Grid Background="MediumSlateBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            x:Name="lblHeader"
            Grid.Column="3"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Content="Travel details"
            FontSize="30"
            />

        <Label
            x:Name="lblTripDestination"
            Grid.Column="1"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Content="Destination:"
            Margin="10"
            FontSize="20"
            HorizontalContentAlignment="Center"
            />
        <Label
            x:Name="lblTripOrVacation"
            Grid.Column="1"
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Content="Travel type:"
            Margin="10"
            FontSize="20"
            HorizontalContentAlignment="Center"
            />
        <Label
            x:Name="lblNumberOfTravelers"
            Grid.Column="0"
            Grid.Row="5"
            Grid.ColumnSpan="3"
            Content="Number of travelers:"
            Margin="10"
            FontSize="20"
            HorizontalContentAlignment="Right"
            />
        <Label
            x:Name="lblCountryDestination"
            Grid.Column="1"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Content="Country:"
            Margin="10"
            FontSize="20"
            HorizontalAlignment="Right"
            />

        <TextBox
            x:Name="txtNumberOfPassengers"
            Grid.Column="3"
            Grid.Row="5"
            />


        <TextBox
            x:Name="txtDestination"
            Grid.Column="3"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            />

        <ComboBox
            x:Name="cboCountryDestination"
            Grid.Column="3"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            />

        <ComboBox
            x:Name="cboTripOrVacation"
            Grid.Column="3"
            Grid.Row="4" SelectionChanged="cboTripOrVacation_SelectionChanged"
            />

        <ComboBox
            x:Name="cboTripType"
            Grid.Column="4"
            Grid.Row="4"
            FontSize="10"
            />

        <CheckBox
            x:Name="chboAllInclusive"
            Grid.Column="4"
            Grid.Row="3"
            Grid.ColumnSpan="2"
            Content="All inclusive?"
            FontSize="20"
            HorizontalAlignment="Right"
            Checked="chboAllInclusive_Checked" Margin="0,54,24,0" Grid.RowSpan="2"
            />

        <Button
            x:Name="btnAddTravel"
            Grid.Column="4"
            Grid.Row="7"
            Content="Add travel"
            Margin="10" Click="btnAddTravel_Click"
            />
        <Button
            x:Name="btnCancel"
            Grid.Column="6"
            Grid.Row="7"
            Content="Cancel"
            Margin="10" Click="btnCancel_Click" 
            />


        <!--
        if trip type = trip -> Leisure or work
        if = vacation -> allinclusive
        Varningsmeddelande
        -->

    </Grid>
</Window>
